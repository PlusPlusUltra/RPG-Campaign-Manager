<h1>Listing articles</h1>
 <%= link_to 'New message', new_message_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @messages.each do |message| %>
    <tr>
      <td><%= message.dest %></td>
      <td><%= link_to 'Show', message_path(message) %></td>
    </tr>
  <% end %>
</table>
