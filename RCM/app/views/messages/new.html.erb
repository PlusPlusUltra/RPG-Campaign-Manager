<% provide(:title, "Write  a messag") %>
<!DOCTYPE html>
<html>
  <body>

    <!--ERRORS-->
    <% if @message.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <div id="error_explanation">
          <h2>
            <%= pluralize(@message.errors.count, "error") %>
          </h2>
          <ul>
            <% @message.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <%= form_with scope: :message, url: user_messages_path do |form| %>
    <p>
      <%= form.label :dest %><br>
      <%= form.text_field :dest %>
    </p>
  
   
    
    <p>
      <%= label_tag(:sender, "Race") %>
      <%= form.select :sender, ['race1', 'race2']%>
    </p>
    
    

    <p>
      <%= form.label :info %><br>
      <%= form.text_area :info %>
    </p>
 
    <p>
      <%= form.submit %>
    </p>
    <% end %>

    <%= button_to 'Back', user_messages_path, method: :get %>

  </body>
</html>
