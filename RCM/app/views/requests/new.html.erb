<% provide(:title, "Send a request") %>
<!DOCTYPE html>
<html>
  <body>

    <div class=" card shadow-lg col-lg-4 col-md-6 bg-white mx-auto pt-2" >
      <h2 class="text-center mt-3 pb-3">Send A Request</h2>
        
        <%= form_with scope: :request, url: user_requests_path do |form| %>
          <div class="field">
            <p>
              <strong><%= form.label :dest %></strong>
              <%= form.text_field :dest %>
            </p>
          </div>
          
          <div class="field">
            <p>
              <strong><%= form.label :campaign %></strong>
              <%= form.text_field :campaign %>
            </p>
          </div>
    
          <div class="actions text-center">
            <p>
              <%= form.submit %>
            </p>
          </div>
        <% end %>


        <!--ERRORS-->
        <% if @request.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <div id="error_explanation">
              <h2>
                <%= pluralize(@request.errors.count, "error") %>
              </h2>
              <ul>
                <% @request.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
       
        <hr>
        <div class="text-center">
          <p>
            <%= link_to 'Back To Requests', user_requests_path, class: "btn  btn-outline-primary-bis waves-effect" %>
          </p>
        </div>

  </body>
</html>
