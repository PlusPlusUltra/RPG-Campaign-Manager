
<h1>Edit Your Character</h1>
 
<%= form_with(model: [@user, @character], local: true) do |form| %>
 
  <% if @character.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@character.errors.count, "error") %> prohibited
        this character from being saved:
      </h2>
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p>
    <strong>Name:</strong>
    <%= @character.name %>
  </p>

  <p>
    <%= form.label :lvl %><br>
    <%= number_field(:character, :lvl, in: 1..20, step: 1) %>
  </p>

  <p>
    <strong>Race:</strong>
    <%= @character.race %>
  </p>

  <p>
    <strong>Class:</strong>
    <%= @character.class_type %>
  </p>

  <p>
    <%= form.label :info %><br>
    <%= form.text_area :info %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', user_characters_path %>