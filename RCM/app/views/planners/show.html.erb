<% provide(:title, "session planning") %>

<!DOCTYPE html>
<html>

<body>

    <div class=" card shadow-lg col-lg-4 col-md-6 bg-white mx-auto pt-2" >
      <h2 class="text-center mt-3 pb-3">Accept the Invite?  </h2>
      <div class="field">
		    <p>
  		    <strong>Day:</strong>
  		    <%= @planner.day %>
		    </p>
      </div>

      <div class="field">
		    <p>
		      <strong>Month:</strong>
  		    <%= @planner.month %>
		    </p>
      </div>

      <div class="field">
		    <p>
		      <strong>Year:</strong>
  		    <%= @planner.year %>
		    </p>
      </div>

        <div class="text-center">
    		  <p>
		        <%= link_to 'Accept', acceptP_path ,method: :post, class: "btn  btn-outline-primary-bis waves-effect"%>
            <%= link_to 'Decline', user_planner_path(@user),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn  btn-outline-primary-bis waves-effect" %>
          </p>
        </div>

        <hr>

        <div class="text-center">
          <p>
            <%= link_to 'Back To Your Sessions', user_planners_path, class: "btn  btn-outline-primary-bis waves-effect" %>
          </p>
        </div>
  	
    <br>
	</body>
</html>
