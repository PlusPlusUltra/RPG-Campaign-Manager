<% provide(:title, "Invite") %>

<!DOCTYPE html>
<html>

<body>

    <div class=" card shadow-lg col-lg-4 col-md-6 bg-white mx-auto pt-2" >
      <h2 class="text-center mt-3 pb-3">Accept the Invite?  </h2>
      <%= form_with url: accept_path do |form| %>
        <div class="field">
          <p>
  		      <strong>campaign:</strong>
  		      <%= @invite.campaign %>
		      </p>
        </div>

        <div class="field">
		      <p>
  		      <strong>From:</strong>
  		      <%= @invite.sender %>
		      </p>
        </div>

        <!--<div class="field">
		      <p>
		        <strong>From:</strong>
  		      <%= @invite.senderid %>
		      </p>
        </div>-->

        <div class="field">
		      <p>
		        <strong>To:</strong>
  		      <%= @invite.destid %>
		      </p>
        </div>

        <div class="field">
          <p>
            <%= form.label :character %>
            <% options = options_from_collection_for_select(@user.characters, 'id', 'name') %>
            <%= form.select :character,  options %>
          </p>
        </div>

        <div class="text-center">
          <p>
            <%= form.submit "Accept", class: "btn  btn-outline-primary-bis waves-effect" %>
            <!--<%= link_to 'Accept', accept_path, method: :post, class: "btn btn-outline-primary-bis waves-effect"%>-->
            <%= link_to 'Decline', user_invite_path(@user),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn  btn-outline-primary-bis waves-effect" %>
          </p>
        </div>
      <% end %>

      <hr>

      <div class="text-center">
        <p>
          <%= link_to 'Back to My Invites', user_invites_path, class: "btn  btn-outline-primary-bis waves-effect" %>
        </p>
      </div>

	</body>
</html>
