<% provide(:title, "My Campaigns") %>
<!DOCTYPE html>
<html>
  
  <body>
    <h1>All campaigns</h1>
 
      <%= button_to 'New Campaign', new_user_campaign_path, method: :get %>
      <br>

      <table>
        <tr>
         <th>Title</th>
          <th>Description</th>
        </tr>
 
        <% @campaigns.each do |campaign| %>
        <tr>
          <td><%= campaign.title %></td>
          <td><%= campaign.description %></td>
          <td><%= button_to 'Invite', user_campaign_path(current_user,campaign), method: :post %></td>
          <td><%= button_to 'Show', user_campaign_path(current_user, campaign), method: :get %></td>
          <td><%= button_to 'Edit', edit_user_campaign_path(current_user, campaign), method: :get %></td>
          <td><%= button_to 'Delete', user_campaign_path(current_user, campaign),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </table>

    <br>
    <%= button_to 'Back', root_path, method: :get %>
    <br>
    
  </body>
</html>
